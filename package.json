{
    "name": "backend-iic3143",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "src/main.ts",
    "scripts": {
        "dev": "tsx watch src/main.ts",
        "build": "tsc",
        "prod": "node dist/main.js",
        "test": "jest"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "collectCoverage": true,
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "moduleFileExtensions": [
            "js",
            "json",
            "jsx",
            "ts",
            "tsx",
            "node"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts?(x)",
            "**/?(*.)+(spec|test).ts?(x)"
        ]
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/nodemailer": "^6.4.15",
        "@types/supertest": "^6.0.2",
        "jsonwebtoken": "^9.0.2",
        "nodemon": "^3.1.0",
        "prisma": "^5.13.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.5",
        "tsx": "^4.7.2",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@prisma/client": "^5.13.0",
        "add": "^2.0.6",
        "argon2": "^0.40.1",
        "cors": "^2.8.5",
        "db-migrate": "^0.11.14",
        "express": "^4.19.2",
        "nodemailer": "^6.9.13",
        "ts-node": "^10.9.2"
    }
}